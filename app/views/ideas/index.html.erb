<div class="row">
  <div class="col s4 new-idea-col">
    <h4>New Idea</h4>
    <button id="idea-create" class="btn waves-effect waves-light blue">Save</button>
    Title: <input type="text" id="new-idea-title" /><br>
    Body: <input type="text" id="new-idea-body" /><br>
  </div>
  <div class="col s8 idea-list-col">
    <%= form_tag ideas_path, :method => 'get', :id => "ideas_search" do %>
        <h4 id="list-title">Ideas</h4>
        <p id="idea-filter">
          <%= text_field_tag :search, params[:search], placeholder: "Search" %>
        </p>
        <div id="ideas"><%= render partial: 'partials/idea_table' %></div>
    <% end %>
  </div>
</div>