<div id="edit-idea">
  <%= form_for @idea do |f| %>
      <%= f.label :title, "Edit Title", class:"mdl-textfield__label" %>
      <%= f.text_field :title, class:"mdl-textfield__input" %>
      <%= f.label :body, "Edit Body", class:"mdl-textfield__label" %>
      <%= f.text_area :body, class:"mdl-textfield__input" %>
      <%= f.submit "Save" %>
  <% end %>
</div>